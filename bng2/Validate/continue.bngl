# Test trajectory continuation
begin model
begin parameters
  k_synth  1.0
  k_degr   0.5
  kp       1.0
  km       0.1
end parameters
begin molecule types
  A()
  B(c)
  C(b)
  Trash()
end molecule types
begin seed species
  A()      0
  B(c)     0
  C(b)     1
  $Trash   0
end seed species
begin observables
  Molecules  Atot  A()
  Molecules  Btot  B()
  Molecules  Ctot  C()
  Molecules  Bfree B(c)
  Molecules  Cfree C(b)
  Molecules  BC    B(c!0).C(b!0)
end observables
begin reaction rules
  # A synthesizes B
  A()   ->  A()  +  B(c)  k_synth
  # degradation of free B
  B(c)  ->  Trash()       k_degr
  # B-C binding
  B(c)  + C(b)  <->  B(c!0).C(b!0)  kp, km
end reaction rules
end model


## actions ##

generate_network({overwrite=>1});
setConcentration("A()",1.0);
simulate_ode({t_start=>0,t_end=>10,n_steps=>20});
setConcentration("A()",0.0);
simulate_ode({t_start=>10,t_end=>40,n_steps=>60,continue=>1});

